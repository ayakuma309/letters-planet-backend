datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
}

model Post {
  id          Int        @id @default(autoincrement())
  videoId     String
  title       String
  url         String
  releaseAt   DateTime   @default(now())
  tags        Tag[]      @relation("PostTag")
  tweets Tweet[]
  bookmarks Bookmark[]
}


model Tag {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  posts Post[]  @relation("PostTag")
}

model Tweet {
  id        Int        @id @default(autoincrement())
  content   String
  postId    Int
  post      Post       @relation(fields: [postId], references: [id])
}

model Bookmark {
  id      String     @id @default(uuid())
  title   String
  startAt Decimal
  postId Int
  post    Post @relation(fields: [postId], references: [id])
}


model Qiita  {
  id        Int        @id @default(autoincrement())
  qiitaId   String
  title     String
  url       String
  profileImageUrl String
  createdAt DateTime   @default(now())
  tags      QiitaTag[]
}

model QiitaTag {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  qiitas Qiita[]
}

model Book {
  id        Int       @id @default(autoincrement())
  bookId    String    @unique
  title     String
  description String
  image    String
  tags      BookTag[]
}

model BookTag {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  books Book[]
}
